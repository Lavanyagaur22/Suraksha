<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEF7E8"
    tools:context=".OngoingTripActivity">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textColor="#25282E"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Estimated time : 40 mins" />

    <TextView
        android:id="@+id/tvExactTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:textColor="#25282E"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="@string/estimated_arrival" />

    <Button
        android:id="@+id/btnEndTrip"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:text="End trip"
        android:textColor="#FEF7E8"
        android:background="#25282E"
        android:textSize="24sp" />

</RelativeLayout>